<div
  class='top'
  onclick=`window.scroll({
      top: 0,
      behavior: 'smooth',
    });`
>
</div>

<style>
  .top {
    content: '';
    position: fixed !important;
    right: 1.2em;
    bottom: 1.2em;
    width: 0;
    height: 0;
    display: block;
    position: sticky;
    border-style: solid;
    border-width: 0px 0.6em 1em 0.6em;
    border-color: transparent transparent var(--theme1-color2) transparent;
    visibility: hidden;
    transition: transform 0.1s ease-out;
    &.active {
      visibility: visible;
    }
    &:hover {
      transform: scale(1.3);
    }
  }
</style>
