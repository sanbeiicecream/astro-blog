<div class='top'></div>

<script>
  import { throttle } from '../utils/common';
  document.addEventListener('astro:page-load', () => {
    const top = document.querySelector('.top');
    top?.addEventListener('click', () => {
      window?.scrollTo({
        top: 0,
        behavior: 'smooth',
      });
    });
    const fn = throttle(() => {
      const top = document.querySelector('body > footer > .top');
      if (
        window.scrollY >
        (document.querySelector('body > header')?.clientHeight || 100)
      ) {
        top?.classList.add('active');
      } else {
        top?.classList.remove('active');
      }
    }, 10);
    window.addEventListener('scroll', fn);
  });
</script>

<style>
  .top {
    content: '';
    position: fixed;
    right: 1.2em;
    bottom: 1.2em;
    width: 0;
    height: 0;
    display: block;
    border-style: solid;
    border-width: 0px 0.6em 1em 0.6em;
    border-color: transparent transparent var(--theme1-color2) transparent;
    visibility: hidden;
    transition: transform 0.1s ease-out;
    &.active {
      visibility: visible;
    }
    &:hover {
      transform: scale(1.3);
    }
  }
</style>
